<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <p>Oops, something went wrong! Please check the errors below.</p>
  <% end %>

  <div class="field">
    <%= label f, :title %>
    <%= text_input f, :title %>
  </div>

  <div class="field">
    <%= label f, :body %>
    <%= textarea f, :body %>
  </div>

  <div class="field">
    <%= label f, :draft %>
    <%= select f, :draft, [{"True", true}, {"False", false}] %>
  </div>

  <div class="field">
    <%= submit "Submit", class: "torch-button" %>
  </div>
<% end %>
