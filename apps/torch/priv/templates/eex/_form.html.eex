<%%= form_for @changeset, @action, fn f -> %>
  <%%= if @changeset.action do %>
    <p>Oops, something went wrong! Please check the errors below.</p>
  <%% end %>
<%= for {label, input, error} <- inputs, input do %>
  <div class="field">
    <%= label %>
    <%= input %>
  </div>
<% end %>
  <div class="field">
    <%%= submit "Submit", class: "torch-button" %>
  </div>
<%% end %>
