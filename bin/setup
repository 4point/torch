#!/usr/bin/env bash

mix local.hex --force;
mix local.rebar --force;
mix deps.get;
mix compile;

npm install;

# Setup local link to torch
npm link;

cd apps/example && {
  mix deps.get;
  mix ecto.setup;
  npm install;
  rm -rf ./node_modules/torch;
  npm link torch;
  mix test;
  cd -;
}

mix credo --strict
